{
	"manifest_version": 2,
	"default_locale": "{def_lang}",
	"update_url": "https://clients2.google.com/service/update2/crx",

	"version": "{version}",
	"name": "{name}",
	"description": "__MSG_appDescriptionShort__",
	"homepage_url": "{homepage}",
	"author": "{author}",
	"developer": {
		"name": "{author}",
		"email": "{author_email}"
	},

	"icons": {
		"128": "icon.png"
	},

	"permissions": [
		"storage"
	],

	"background": {
		"page": "background.html"
	},
	"options_page": "options.html",
	"options_ui": {
		"page": "options.html#options_ui"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"includes/app.js",
				"includes/viewer.js"
			],
			"run_at": "document_start",
			"all_frames": true
		},
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"includes/opener.js"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	]
}
